<%- include('../shared/includes/head', { pageTitle: '註冊頁面' }) %>
  <link rel="stylesheet" href="/styles/registrate_form.css">
</head>
<body>
<%- include('../shared/includes/header') %>
  <main>
    <h1>使用者註冊</h1>
    <form id="registration" action="/" method="POST">
      <p>
        <span class="important">*</span>
        <label for="username">姓名</label>
        <input type="text" id="username" name="username" minlength="1" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="nickname">暱稱</label>
        <input type="text" id="nickname" name="nickname" minlength="1" maxlength="20" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="email">信箱</label>
        <input type="email" id="email" name="email" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="email">確認信箱</label>
        <input type="email" id="email" name="email" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="password">密碼</label>
        <input type="password" id="password" name="password" minlength="6" required>
      </p>
      <div id="submit">
        <button class="btn">註冊</button>
      </div>
    </form>
  </main>
<%- include('../shared/includes/footer') %>